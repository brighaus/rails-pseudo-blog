<% if @article.errors.any? %>
  <h2>The following errors prevented the article from being saved:</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%
  form_action = local_assigns[:is_edit] ? 'update' : 'create'
  button_label = local_assigns[:is_edit] ? 'Update' : 'Create'
%>


<%= form_for @article, url: {action: form_action}   do |form|  %>
  <fieldset>
    <legend>Article Details</legend>
     <%= form.label :title %>
     <%= form.text_field :title %>

     <%= form.label:description %>
     <%= form.text_area(:description,size: "30x4") %>
  </fieldset>
  <%= form.submit button_label %>
<% end %>